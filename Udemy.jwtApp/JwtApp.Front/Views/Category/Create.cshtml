@model JwtApp.Front.Models.CreateCategoryModel

@{
    ViewBag.Title = "Kategori Ekle";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow-4">
            <div class="card-header bg-primary">
                <h5 class="card-title text-white mb-0">
                    <i class="fas fa-plus-circle me-2"></i>Yeni Kategori Ekle
                </h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" asp-controller="Category" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="form-outline mb-4" data-mdb-input-init>
                        <input asp-for="Definition" type="text" id="categoryDefinition" class="form-control" />
                        <label class="form-label" for="categoryDefinition">Kategori Adı</label>
                        <div class="form-helper">
                            <span asp-validation-for="Definition" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-end mt-4">
                        <a asp-action="List" asp-controller="Category" class="btn btn-outline-primary btn-rounded me-2">
                            <i class="fas fa-arrow-left me-2"></i>Listeye Dön
                        </a>
                        <button type="submit" class="btn btn-primary btn-rounded ripple-surface">
                            <i class="fas fa-save me-2"></i>Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

    @{
        <script>
            import { Input, initMDB } from "mdb-ui-kit";

            initMDB({ Input });
    </script>
    }




