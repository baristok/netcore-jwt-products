@model List<JwtApp.Front.Models.ProductListModel>

@{
    ViewBag.Title = "Ürünler";
    Layout = "_Layout";
}

@{
    int counter = 1;
}
<div class="card shadow-4 my-4">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Ürün Listesi</h5>
        <a asp-action="Create" asp-controller="Product" class="btn btn-success btn-rounded btn-floating ripple-surface">
            <i class="fas fa-plus"></i>
        </a>
    </div>
    <div class="card-body">
        @if (Model?.Count > 0)
        {
            
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                    <tr>
                        <th scope="col">Sıra</th>
                        <th scope="col">Id</th>
                        <th scope="col">Ürün Adı</th>
                        <th scope="col">Stok</th>
                        <th scope="col">Fiyat</th>
                        <th scope="col">Kategori ID</th>
                        <th scope="col">İşlemler</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>@product.Stock</td>
                            <td>@product.Price</td>
                            <td>@product.CategoryId</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a asp-action="Update" asp-controller="Product" asp-route-id="@product.Id" 
                                       class="btn btn-outline-primary btn-floating btn-sm ripple-surface">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Remove" asp-controller="Product" asp-route-id="@product.Id" 
                                       class="btn btn-outline-danger btn-floating btn-sm ripple-surface">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        counter++;
                    }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle me-2"></i>Herhangi bir kayıt bulunamadı.
            </div>
        }
    </div>
</div>

