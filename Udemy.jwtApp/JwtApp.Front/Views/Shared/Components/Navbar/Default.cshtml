<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container">
        <a class="navbar-brand" href="/Home/Index">JWT Uygulama</a>
        <button
            class="navbar-toggler"
            type="button"
            data-mdb-toggle="collapse"
            data-mdb-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup"
            aria-expanded="false"
            aria-label="Toggle navigation"
        >
            <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link" aria-current="page" href="/Home/Index"><i class="fas fa-home me-1"></i>Ana Sayfa</a>
                @if (User.IsInRole("Admin"))
                {
                    <a class="nav-link" asp-action="List" asp-controller="Category"><i class="fas fa-list me-1"></i>Kategoriler</a>
                    <a class="nav-link" asp-action="Create" asp-controller="Category"><i class="fas fa-plus-circle me-1"></i>Kategori Ekle</a>
                    <a class="nav-link" asp-action="AdminPage" asp-controller="Home"><i class="fas fa-user-shield me-1"></i>Admin Sayfası</a>
                }
                @if (User.IsInRole("Member"))
                {
                    <a class="nav-link" asp-action="MemberPage" asp-controller="Home"><i class="fas fa-user me-1"></i>Üye Sayfası</a>
                }
                @if (User.IsInRole("Admin") || User.IsInRole("Member"))
                {
                    <a class="nav-link" asp-action="List" asp-controller="Product"><i class="fas fa-box me-1"></i>Ürünler</a>
                }
            </div>
            <div class="navbar-nav ms-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="nav-link text-dark">
                        <i class="fas fa-user-circle me-1"></i>Merhaba, @User.Identity.Name
                    </span>
                    <a class="nav-link" asp-action="Logout" asp-controller="Account"><i class="fas fa-sign-out-alt me-1"></i>Çıkış Yap</a>
                }
                else
                {
                    <a class="nav-link" asp-action="Login" asp-controller="Account"><i class="fas fa-sign-in-alt me-1"></i>Giriş Yap</a>
                }
            </div>
        </div>
    </div>
</nav>
<!-- Navbar -->